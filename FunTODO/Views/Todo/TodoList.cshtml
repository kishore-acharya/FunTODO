@model IEnumerable<FunTODOWebSite.Models.Entity.TodoListViewModel>
@{
    ViewData["Title"] = "TodoList";
}
<head>
    <link rel="stylesheet" href="~/css/todo-card.css" />

</head>
<h1>TodoList</h1>
<script type="text/javascript">
    function addtodoList() {
        var newCardTitle = $("#newTodoTitle").val();
        var newCard = $('<div/>').addClass("card");
        var newCardBody = $('<div/>').addClass("card-body");
        var newCardHeader = $('<h4/>').addClass("card-header").text(newCardTitle);
        newCardBody.append(newCardHeader);
        newCard.append(newCardBody);
        $('#todoList').append(newCard);
    }
</script>
<div class="jumbotron">
    <div class="Add-Button">
        <form class="form-inline">
            <input id="newTodoTitle" type="text" class="form-control mb-2 mr-sm-2" placeholder="Add a new list" style="width: 20rem">
            <button type="button" class="btn btn-outline-dark mb-2 mr-sm-2" onclick="addtodoList()">Add</button>
        </form>
    </div>
    <div id="todoList" class="card-columns">

        @foreach (var todolist in Model)
        {
            <div class="card">
                <div class="card-body">
                    <h4 class="card-header">@todolist.todoTitle</h4>
                    <ul class="list-group">
                        @foreach (var item in todolist.todoList)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.TextValue
                                <span class="badge badge-primary badge-pill">14</span>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        }


    </div>
</div>
