@model FunTODOWebSite.Models.Entity.TodoListViewModel
@{
    ViewData["Title"] = "TodoList";
}
<head>
    <link rel="stylesheet" href="~/css/todo-card.css" />
</head>
<h1>TodoList</h1>
<div class="jumbotron">
<div class="card-columns">
    <div class="card">
        <div class="card-body">
            <h4 class="card-header">@Model.todoTitle</h4>
            <ul class="list-group">
                @foreach (var item in Model.todoList)
                {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.TextValue
                    <span class="badge badge-primary badge-pill">14</span>
                </li>
                    
                }
            </ul>
        </div>
    </div>
</div>
</div>
