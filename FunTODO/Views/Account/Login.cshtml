@model FunTODOWebSite.Models.Login.LoginModel
@{
    Model.ReturnUrl = ViewBag.ReturnUrl;
}
<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
@*using tag helpers instead of html helpers in mvc*@
<div class="container login-container">
    <form class="login-form" asp-action="login">
        <input asp-for="ReturnUrl" type="hidden" value="@ViewBag.ReturnUrl" />
        <div class="imgcontainer">
            <img src="~/images/img_avatar.png" alt="Avatar" class="avatar">
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">
            <label asp-for="UserName"><b>Username</b></label>
            <input asp-for="UserName" type="text" placeholder="Enter Username" required>
            <span asp-validation-for="UserName" class="text-danger"></span>

            <label asp-for="Password"><b>Password</b></label>
            <input asp-for="Password" type="password" placeholder="Enter Password" required>
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="btnSubmit">Login</button>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>

        <div class="container" style="background-color: #f1f1f1">
            <button type="button" class="cancelbtn">Cancel</button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>
</div>
